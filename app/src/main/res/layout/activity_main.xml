<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


    <!-- 214.1 H.W-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home Work 214.1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFEB3B"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Given Number Below"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/divion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number Here"
        android:textSize="25sp"
        android:inputType="number"
        />
    <Button
        android:id="@+id/click_Here"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:textSize="30sp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/Display_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result Here"
        android:textSize="30sp"
        android:textStyle="bold"
        />


            <!-- 214.2 H.W-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Work 214.2"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFEB3B"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Given Year Below"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/leap_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Year Here"
                android:textSize="25sp"
                android:inputType="number"
                />
            <Button
                android:id="@+id/click_Here2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textSize="30sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/Display_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Result Here"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <!-- 214.3 H.W-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Work 214.3"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFEB3B"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Given Number Below"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Number Here"
                android:textSize="25sp"
                android:inputType="number"
                />
            <Button
                android:id="@+id/click_Here3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textSize="30sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/Display_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Result Here"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <!-- 214.4 H.w-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Work 214.4"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFEB3B"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Given the All Sub number Below"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/Number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Physics Marks Here"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/Number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Chemistry Marks Here"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/Number3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Biology Mrks Here"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/Number4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Math Here"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/Number5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Computer Here"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            <Button
                android:id="@+id/click_Here4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textSize="30sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/Display_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Result Here"
                android:textSize="30sp"
                android:textStyle="bold"
                />


            <!-- 214.5 H.w Design -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Work 214.5"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFEB3B"
                />
            <EditText
                android:id="@+id/Before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Before units Number"
                android:textSize="25sp"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/After"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Present Unit Number"
                android:textSize="25sp"
                android:inputType="number"
                />
            <Button
                android:id="@+id/click_Here5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textSize="30sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/Display_Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Result Here"
                android:textSize="30sp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>